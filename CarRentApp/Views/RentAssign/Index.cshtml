@model IEnumerable<CarRentApp.ViewModels.RentAssignViewModel>

@{
    ViewBag.Title = "Assign List";

}

@section styles
{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css" />
    <link href="https://cdn.datatables.net/1.10.19/css/dataTables.semanticui.min.css" rel="stylesheet" />

    <link href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.bootstrap.min.css" rel="stylesheet" />

}

<h2>Assigned Rent List</h2>
<br/>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

<table id="example" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>
            SL
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentRequestId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VehicleType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentAssignDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentPrice)
        </th>
        <th>
            Action
        </th>
    </tr>
    </thead>
    <tbody>

        @{
            var sl = 0;
        }
        @foreach (var item in Model)
        {
            sl++;
            <tr>
                <td>
                    @sl
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RentRequest.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RentAssignDateTime)
                </td>
                <td class="text-success">
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RentPrice)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) &nbsp;

                    @*@Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                        @Html.ActionLink("Delete", "Delete", new {id = item.Id})*@
                </td>
            </tr>
        }
    </tbody>
    <thead>
        <tr>
            <th>
                SL
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentRequestId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentAssignDateTime)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentPrice)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
</table>

@section scripts
{

    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.semanticui.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.js"></script>

    <script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.3/js/responsive.bootstrap.min.js"></script>


    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
}
