                        @Html.ValidationMessageFor(model => model.CustomerId)
                    </div>
                </div>*@
            <div class="form-group row">
                <div class="col-md-offset-4 col-md-7">
                    <input type="submit" value="Replay" class="btn btn-success"/>
                </div>
            </div>
        }

        <br/>

    </div>

    <div class="col-md-7">
        <div class="row col-md-offset-1">
            <h4 class="">Conversations:</h4>
            <div class="text-dark">
                @{
                    var msgData = ViewBag.Messages;
                    if (msgData != null)
                    {

                        foreach (var msgDt in msgData)
                        {
                            <dl>
                                <dt class="text-primary">@msgDt.Customer.Name</dt>
                                <dd style="margin-left: 30px;">@msgDt.Details <span class="col-md-offset-1 text-muted"> @msgDt.NotificatinDateTime.ToString("hh:mm:tt")</span></dd>
                            </dl>
                        }
                    }
                }
                </>
            </div>

        </div>
    </div>

</div>
<br/>
<div>
    
    @Html.ActionLink("Back to List", "Index")
</div>

